using System;
using System.Globalization;
class Program
{
    static void Main(string[] args)
    {
        DateTime todayDate = DateTime.Now;
        Console.Write("Enter you'r birthday ");
        string textInput = Console.ReadLine();

        string dateFormat = "MM.dd.yyyy";
        DateTime birthDate = DateTime.ParseExact(textInput, dateFormat, CultureInfo.InvariantCulture);

        int age = todayDate.Year - birthDate.Year;
        if (todayDate < birthDate.AddYears(age))
        {
            age--;
        }

        Console.WriteLine("You are now {0} years old.", age);
        Console.WriteLine("In 10 years you will be {0} years old.", age + 10);
    }
}
